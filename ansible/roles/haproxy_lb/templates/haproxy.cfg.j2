global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000
# add stats config
listen stats
    bind *:8404
    stats enable
    stats uri /stats
    stats refresh 10s
    stats admin if LOCALHOST

frontend http_front
   bind *:80
   default_backend http_back

frontend https_front
   bind *:443 ssl crt /etc/ssl/private/haproxy.pem
   default_backend http_back

backend http_back
   balance roundrobin
   # loop automatically adds all hosts from the [webservers] group
   # add variable that defines the environment - dev/stg/prod
   {% for host in groups['webservers_' + inventory_hostname.split('-')[0]] %}
   server {{ hostvars[host].inventory_hostname }} {{ hostvars[host].private_ip }}:{{ http_port }} check
   {% endfor %}
